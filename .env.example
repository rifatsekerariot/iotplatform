# Environment Variables for ARIOT IOT Platform
# Copy this file to .env and update with your values

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=ariot_db
POSTGRES_USER=ariot_user

# ============================================
# CACHE (Redis)
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here

# ============================================
# MQTT BROKER
# ============================================
MQTT_USERNAME=ariot
MQTT_PASSWORD=your_secure_mqtt_password_here

# ============================================
# APPLICATION SECURITY
# ============================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_change_this_in_production

# ============================================
# OPTIONAL: Custom Ports
# ============================================
# Frontend HTTP Port
#HTTP_PORT=80

# Backend API Port
#BACKEND_PORT=8080

# Database Port
#POSTGRES_PORT=5432
